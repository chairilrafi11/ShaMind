<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iv_image_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/chatting"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_below="@+id/iv_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/abu"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_below="@id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulailah berdiskusi dengan teman baru anda di ShaMind, Bertukar Pikiran dengan bebas tanpa hambatan secara Real Time"
        app:layout_constraintTop_toBottomOf="@id/tv_heading"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:textColor="@color/abu" />



</RelativeLayout>